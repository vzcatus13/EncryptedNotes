<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="MainActivity" parent="AppTheme" />

    <style name="AppTheme.BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.BottomSheetDialogTheme.Default">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert.Bridge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="backgroundInsetStart">@dimen/_10sdp</item>
        <item name="backgroundInsetEnd">@dimen/_10sdp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Dialog.Button</item>
    </style>

    <style name="AppTheme.Dialog.Button">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>